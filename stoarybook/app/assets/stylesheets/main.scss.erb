
$pink: #e783f4;
$purple: #6d5095;
$green: #61a500;

@font-face {
    font-family: 'gothic_bold';
    src: url('/assets/texgyreadventor-bold-webfont.eot');
    src: url('/assets/texgyreadventor-bold-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/texgyreadventor-bold-webfont.woff') format('woff'),
         url('/assets/texgyreadventor-bold-webfont.ttf') format('truetype'),
         url('/assets/texgyreadventor-bold-webfont.svg#texgyreadventorbold') format('svg');
    font-weight: normal;
    font-style: normal;

}




@font-face {
    font-family: 'gothic';
    src: url('/assets/texgyreadventor-regular-webfont.eot');
    src: url('/assets/texgyreadventor-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('/assets/texgyreadventor-regular-webfont.woff') format('woff'),
         url('/assets/texgyreadventor-regular-webfont.ttf') format('truetype'),
         url('/assets/texgyreadventor-regular-webfont.svg#texgyreadventorregular') format('svg');
    font-weight: normal;
    font-style: normal;

}

html {
  background-color: white;
  color: black;
  a {
    text-decoration: none;
    color: #563a1e; //dark brown
  }
  a:hover {
    color: #995b3e;//light brown
  }
  a:visited {
    color: black;
  }
}

body {
  background-image: url( ' <%= image_path("theme/typewriter_dots2.png") %>');
  width: 100%;
}
h1 {
  font-size: 45pt;
  font-weight: 500;
  font-family: Courier;
  color: black;
}
img {
  max-width: 100%;
}
#body_content {
  margin: 0 auto;
	width: 92%;
  background-color:white;
  padding: 2%;
}

.navigation_font {
    font-size: 0.75em;
    color: black;
    font-weight: bold;
    font-family: 'gothic',Times,Serif;
}

#navigation {
	float: right;
	width: 55%;
  padding: 2% 0 0 4%;
  ul {
    display: inline-block;
    width: 33%;
  }
  ul li {
    display: inline-block;
    line-height: 0.7em;

    a.pink {
      color:$pink;
    }
    a.purple {
      color:$purple;
    }
    a.purple:hover {
      color: $green;
      text-decoration: none;
    }
    a.pink:hover{
      color: $green;
      text-decoration: none;
    }
    span.pink_circle:before {
      content: ' \25CF';
      font-size: 4em;
      color:$pink;
    }
    span.purple_circle:before {
      content: ' \25CF';
      font-size: 4em;
      color:$purple;
    }
    a.purple:hover span.purple_circle:before,
    a.pink:hover span.pink_circle:before {
      color:$green;
    }
  }
}
#top_logo {
	float: left;
  width: 45%;
	img {
		max-width: 100%;
	}
}

#nav_sep {
  width: 90%;
  margin: 0 auto;
	height: 40px;

  .bez_line {
		margin-top: 20px;
    border-bottom: 2px solid $green;
    width: 35%;
    float: left;
  }
  .bezier {
    width: 30%;
    float: left;
		img {
			max-width: 100%;
			//background-image: url( ' <%= image_path("theme/nav_bezier.png") %>');
		}
  }
}


.book_picture_cont {
  float: left;
  width: 45%;

  .book_picture_frame {
    img {
      max-width: 100%;
    }
  }
  .book_picture_image {
    max-width: 50%;
    max-height: 50%;
    margin: 0 auto;
    margin-top: -90%;
    img {
      max-width: 100%;
    }
  }
}

.fold_cont {
  width: 90%;
  margin: 0 auto;
}
.story_book_cont {
  margin-left: 5%;
  float: left;
  width: 50%;
  .story_page {
    border: 1px solid gray;
    padding: 3%;
    font-family: Courier, Serif;
    font-size: 0.8888888888888888em;
  }
}

#footer {
  margin: 0 auto;
  margin-top: 15%;
  width: 90%;
  .footer_element {
    float: left;
  }
  #footer_typewriter {
    width: 20%;
  }
  #footer_links {
    width: 35%;
    margin-top: 20px;
    ul {
      padding: 0;
      margin: 0;
    }
    ul li {
      display: inline-block;
      width: 20%;
      margin-left: 10%;
    }
  }
  #bottom_logo {
    width: 45%;
  }
}
.clear {
  clear: both;
}

