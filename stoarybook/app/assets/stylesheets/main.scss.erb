
html {
  background-color: white;
  color: black;
  a {
    text-decoration: none;
    color: #563a1e; //dark brown
  }
  a:hover {
    color: #995b3e;//light brown
  }
  a:visited {
    color: black;
  }
}

body {
  background-image: url( ' <%= image_path("theme/typewriter_dots.png") %>');
  width: 100%;
}
h1 {
  font-size: 45pt;
  font-weight: 500;
  font-family: Courier;
  color: black;
}
img {
  max-width: 100%;
}
#body_content {
  margin: 0 auto;
	width: 90%;
  background-color:white;
  padding: 2%;
}
#navigation {
	float: right;
	width: 55%;
  ul {
  }
  ul li {
    margin-right: 3%;
    display: inline-block;
    font-size: 0.75em;
    color: black;
    font-weight: bold;
    font-family: Times,Serif;
  }
}
#top_logo {
	float: left;
  width: 45%;
	img {
		max-width: 100%;
	}
}

#nav_sep {
  width: 90%;
  margin: 0 auto;
	height: 40px;

  .bez_line {
		margin-top: 20px;
    border-bottom: 2px solid black;
    width: 35%;
    float: left;
  }
  .bezier {
    width: 30%;
    float: left;
		img {
			max-width: 100%;
			//background-image: url( ' <%= image_path("theme/nav_bezier.png") %>');
		}
  }
}


.book_picture_cont {
  float: left;
  width: 45%;

  .book_picture_frame {
    img {
      max-width: 100%;
    }
  }
  .book_picture_image {
    max-width: 50%;
    max-height: 50%;
    margin: 0 auto;
    margin-top: -90%;
    img {
      max-width: 100%;
    }
  }
}

.fold_cont {
  width: 90%;
  margin: 0 auto;
}
.story_book_cont {
  margin-left: 5%;
  float: left;
  width: 50%;
  .story_page {
    border: 1px solid gray;
    padding: 3%;
    font-family: Courier, Serif;
    font-size: 0.8888888888888888em;
  }
}

#footer {
  margin: 0 auto;
  margin-top: 15%;
  width: 90%;
  .footer_element {
    float: left;
  }
  #footer_typewriter {
    width: 20%;
  }
  #footer_links {
    width: 30%;
  }
  #bottom_logo {
    width: 50%;
  }
}
.clear {
  clear: both;
}

