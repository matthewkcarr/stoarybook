<!DOCTYPE html>
<html>
<head>
  <title>Stoarybook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="body_content">

	<div id="top_logo">
		<a href="/">
			<img src="<%= image_path('theme/logo.png') %>" />
		</a> 
	</div>

	<div id="navigation" class="navigation_font">
		<ul class="nav">
    <% if user_signed_in? %>
			<li>
        <a href="<%= destroy_user_session_path %>" method="delete" class="pink">
        <span class="pink_circle">&nbsp;</span>
				Sign Out</a>
			</li>
    <% else %>
			<li>
        <a href="<%= new_user_session_path %>" class="pink">
        <span class="pink_circle">&nbsp;</span>
				Sign In</a>
			</li>
    <% end %>
    <% if user_signed_in? %>
			<li>
        <a href="<%= user_books_path(current_user) %>" class="pink">
        <span class="pink_circle">&nbsp;</span>
				Manage a Book</a>
			</li>
    <% else %>
			<li>
        <a href="<%= new_book_path %>" class="pink">
        <span class="pink_circle">&nbsp;</span>
				Create a Book</a>
			</li>
    <% end %>
    </ul>
    <ul class="nav">
			<li>
        <a href="<%= bulk_photos_path %>" class="purple">
        <span class="purple_circle">&nbsp;</span>
				Browse Books</a>
			</li>
			<li>
        <a href="<%= bulk_photos_path %>" class="purple">
        <span class="purple_circle">&nbsp;</span>
				Upload a Photo</a>
			</li>
    </ul>
    <ul class="nav">
			<li>
        <a href="/" class="pink">
        <span class="pink_circle">&nbsp;</span>
				Browse Photos</a>
			</li>
		</ul>
	</div>

	<div class="clear">
	</div>

	<div id="page_content">
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<%= yield %>
	</div>

	<div id="footer">
    <div id="footer_typewriter" class="footer_element">
      <img src="<%= image_path('theme/typewriter.png') %>" />
    </div>
    <div id="footer_links" class="footer_element navigation_font">
      <ul>
        <li>
          <a href="/">Contact</a>
        </li>
        <li>
          <a href="/">Copyright</a>
        </li>
        <li>
          <a href="/">About</a>
        </li>
      </ul>
    </div>
    <div id="bottom_logo" class="footer_element">
      <a href="/">
        <img src="<%= image_path('theme/logo.png') %>" />
      </a> 
    </div>
		<div class="clear">
		</div>
	</div>
</body>
</html>
